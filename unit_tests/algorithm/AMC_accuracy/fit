

set logscale xy

# 1st plot
set terminal wxt 1 enhanced font 'Verdana,10' persist
f(x)=a*x
a=1.0
fit f(x) 'RAYS_QMC.dat' via a

g(x)=b*x*x
b=1.0
fit g(x) 'RAYS_FMC.dat' via b

set key top left 
plot 'RAYS_QMC.dat' title 'Quasi Random', \
     'RAYS_FMC.dat' title 'Pseudo Random', \
     f(x) notitle, \
     g(x) notitle

